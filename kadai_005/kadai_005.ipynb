      "source": [
        "# 台形の各辺と高さ（単位はcm）\n",
        "top = 10\n",
        "bottom = 20\n",
        "height = 5\n",
        "\n",
        "# 面積の計算（台形の面積 =（上辺＋下辺）× 高さ ÷ 2）\n",
        "area = (top + bottom) * height / 2\n",
        "\n",
        "# 結果を「◯◯cm²」の形式で出力\n",
        "print(f\"{area}cm²\")\n"
      ]
    }
  ]
